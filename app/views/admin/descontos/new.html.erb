<h1>Novo cupom de desconto</h1>

<% form_for(@desconto, :url => admin_descontos_path, :html => { :multipart => true }) do |f| %>
  <%= error_messages_for :desconto %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <p class="form_button"><%= f.submit "Salvar" %> ou <%= link_to "Voltar", admin_descontos_path %></p>
<% end %>

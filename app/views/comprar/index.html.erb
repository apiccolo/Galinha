<div class="grid_12 alpha omega" style="padding-left:30px">
  <%= error_messages_for 'pedido', 'pessoa', :header_message => "Atenção: Pedido com problemas" -%>
  <div class="grid_12 alpha omega">
    <h3 id="call2compra">Peça já os produtos da Galinha Pintadinha!</h3>
    <%= render :partial => "instrucoes_iniciais",
               :locals => { :i => 1 } %>
  </div>

  <div class="grid_8 alpha">
  <% form_for :pedido, :url => "/comprar/confirmar_pedido", :html => { :id => "form_compra" } do |f| %>
    <!-- CARRINHO -->
    <%= render :partial => "mostra_carrinho" %>

    <!-- FORM DO COMPRADOR -->
    <%= render :partial => "mostra_form_comprador" %>

    <!-- FRETE, DESCONTO, TOTAL -->
    <%= render :partial => "frete_desconto_total" %>

      <div class="grid_1 alpha omega direita">
      <%= image_submit_tag('icones/botao_continuar.png') %>
      </div>
  <% end %>
  </div>

  <div class="grid_3 omega" style="padding-top:10px;border-left:1px dotted #aaa">
    <!-- APROVEITE PARA LEVAR -->
    <%= render :partial => "mostra_leve_tambem" %>

    <!-- LISTA DE SUGESTOES -->
    <%= render :partial => "mostra_sugestoes" %>
  </div>
</div>

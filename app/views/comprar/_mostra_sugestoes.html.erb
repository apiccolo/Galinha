<div class="grid_3 omega" id="sugestoes">
<% if (settings_checked?(@settings['loja_mostrar_sugestoes']) and 
      @sugestoes and 
      not @sugestoes.blank?) -%>
  <h6 class="margin0">Sugest√µes da Galinha</h6>
  <p class="pequeno">Inclua em seu carrinho um dos produtos abaixo:</p>
  <ul id="lista_de_sugestoes" class="clearfix">
  <% @sugestoes.each_with_index do |produto, j| %>
    <% if (j < @settings['loja_mostrar_sugestoes_maximo'].to_i) -%>
    <li id="produto_<%= produto.id %>" class="produtos">
      <%= infos_produto_box(produto) %>
    </li>
    <% end -%>
  <% end %>
  </ul>
<% end -%>
</div>
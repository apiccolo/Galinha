  <div class="grid_6 omega">
    <h3 class="vermelho">... ou mande seu pópópó para a Galinha Pintadinha!</h3>
    <% form_for :fale_conosco, :url => { :action => "index" } do |f| %>
      <input type="hidden" value="Galinha Pintadinha responde o contato" id="subject" name="mailer[subject]" />
      <fieldset id="form_falecom">
        <legend>Fale Conosco</legend>
        <ol>
          <li>
            <label for="nome">Seu Nome:</label>
            <input type="text" value="" size="40" id="nome" name="mailer[nome]" /><br />
          </li>
          <li>
            <label for="email">Seu E-mail:</label>
            <input type="text" value="" size="40" id="from_field" name="mailer[from_field]" /><br />
          </li>
          <li>
            <label for="mensagem">Sua Mensagem:</label>
            <textarea id="mensagem" rows="5" cols="40" name="mailer[mensagem]"></textarea><br />
            <p class="margin0 pequeno">Obs.: Ao se referir a um pedido, lembre-se de informar o número do pedido.</p>
          </li>
          <li class="direita" style="padding:0 20px 0">
            <input type="submit" value="Enviar" />
          </li>
        </ol>
      </fieldset>
    <% end %>
